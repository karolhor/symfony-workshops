{% extends 'base.html.twig' %}

{% block content %}
    <div class="container job-list">
        <h1>Current job offers</h1>

        <div class="new-job-btn">
            <a href="{{ path("newJob") }}" class="btn btn-primary">Add new Job Offer</a>
        </div>

        <div class="panel panel-default">
            <nav class="navbar navbar-default job-filters">
                <div class="container-fluid">
                    <form class="navbar-form">
                        <div class="form-group col-sm-4">
                            <label for="titleFilter">Title</label>
                            <input type="text" class="form-control" id="titleFilter">
                        </div>
                        <div class="form-group col-sm-4">
                            <label for="employerFilter">Employer</label>
                            <input type="text" class="form-control" id="employerFilter">
                        </div>
                        <div class="form-group col-sm-3">
                            <label for="jobTypeFilter">Job type</label>
                            <input type="text" class="form-control" id="jobTypeFilter">
                        </div>
                        <div class="col-sm-1">
                            <button type="submit" class="btn btn-success">Filter</button>
                        </div>
                    </form>
                </div>
            </nav>

            <div class="panel-body">
                {{ message }}
                {% for job in jobs %}
                    <div class="list-group">
                        <a href="{{ path("showJob", {'id': job.id}) }}" class="list-group-item">
                            <h4 class="list-group-item-heading job-header">{{ job.title }} @ <span class="employer-label">{{ job.employer }}</span></h4>
                            <p class="list-group-item-text">{{ job.description|split("\n")|first }}</p>
                            <span class="label label-primary">{{ job.type }}</span>
                        </a>
                    </div>
                {% else %}
                    <div class="list-group">
                        No jobs found.
                    </div>
                {% endfor %}

                <nav>
                    <ul class="pagination">
                        <li><span aria-hidden="true">&laquo;</span></li>
                        <li class="active"><a href="#">1</a></li>
                        <li class=""><a href="#">2</a></li>
                        <li class=""><a href="#">3</a></li>
                        <li><a href="#"><span>&raquo;</span></a></li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
{% endblock %}
