{% extends 'base.html.twig' %}

{% form_theme form 'Form/job_offer_layout.html.twig' %}

{% block content %}
    <div class="container new-job">
        <h1>Create new Job offer</h1>

        <div class="panel panel-default">
            <div class="panel-heading"></div>
            <div class="panel-body">

                {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.title, {'attr': {'placeholder': 'PHP Programmer'}}) }}
                {{ form_row(form.employer, {'attr': {'placeholder': 'e.g. Google Inc.'}}) }}
                {{ form_row(form.description, {'attr':
                    {'placeholder': 'Requirements, Social Package, Salary', 'rows': '20'}}) }}
                {{ form_row(form.type, {'label': 'Job Type', 'attr': {'placeholder': 'e.g. PHP'}}) }}
                {{ form_row(form.attachment) }}
                {{ form_row(form.attachmentName, {'attr': {'placeholder': 'e.g. Resume'}}) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.submit) }}
                        <a href="{{ path("listJobs") }}" class="btn btn-link">Go back to list</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
