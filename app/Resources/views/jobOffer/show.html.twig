{% extends 'base.html.twig' %}

{% block content %}

    <div class="container job-offer">
        <h1>{{ job.title }} @ <span class="employer-label">{{ job.employer }}</span></h1>

        <h3>Job Description <span class="label label-primary">{{ job.type.name }}</span></h3>

        <p class="lead">
            {{ job.description|nl2br }}
        </p>

        {% if job.attachment %}
            <h3>Attachment</h3>
            {{ job.attachment|attachment }}
        {% endif %}

        {% if job.tags|length > 0 %}
            <h3>Tags</h3>
            <ul>
                {% for tag in job.tags %}
                    <li><span class="label label-info">{{ tag.value }}</span></li>
                {% endfor %}
            </ul>
        {% endif %}

        <div class="row actions">
            {% if is_granted('ROLE_USER') and job.isAuthor(app.user) %}
                <a href="" class="btn btn-primary">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>
            {% endif %}
            <a href="{{ path("listJobs") }}" class="btn btn-link">Go back to list</a>
        </div>

    </div>
{% endblock %}
