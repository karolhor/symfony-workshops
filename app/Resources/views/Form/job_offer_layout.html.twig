{% use "form_div_layout.html.twig" %}

{% block form_start %}
    {% set attr = attr|merge({novalidate: 'novalidate', class: 'form-horizontal'}) %}
    {{ parent() }}
{% endblock form_start %}

{% block form_label %}
    {% set label_attr = label_attr|merge({class: 'col-sm-2 control-label'}) %}
    {{ parent() }}
{% endblock form_label %}

{% block form_widget_simple %}
    {% set attr = attr|merge({class: 'form-control'}) %}
    {{ parent() }}
{% endblock form_widget_simple %}


{% block choice_widget %}
    {% set attr = attr|merge({class: 'form-control'}) %}
    {{ parent() }}
{% endblock choice_widget %}

{% block textarea_widget %}
    {% set attr = attr|merge({class: 'form-control'}) %}
    {{ parent() }}
{% endblock textarea_widget %}

{% block submit_widget %}
    {% set attr = attr|merge({class: 'btn btn-success'}) %}
    {{ parent() }}
{% endblock submit_widget %}

{% block form_row %}
    <div class="form-group">
        {{ form_label(form) }}
        <div class="col-sm-10">
            {{ form_widget(form) }}
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock form_row %}
